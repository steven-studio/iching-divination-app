{
  "expo": {
    "name": "AI易經占卜",
    "slug": "iching-divination-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ichingdivinationapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.stevenstudio.ichingapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "為了拍攝或更新您的頭像，本 App 需要使用相機。",
        "NSMicrophoneUsageDescription": "為了錄製語音或影片，本 App 需要使用麥克風。",
        "NSPhotoLibraryUsageDescription": "為了上傳頭像或選擇圖片，本 App 需要讀取您的相簿。",
        "NSPhotoLibraryAddUsageDescription": "為了將圖片保存到相簿，本 App 需要寫入相簿。",
        "CFBundleDisplayName": "AI易經占卜"
      },
      "entitlements": {
        "com.apple.developer.in-app-payments": [
          "merchant.com.stevenstudio.ichingapp"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": false,
      "package": "com.stevenstudio.ichingapp"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4cb74053-48bc-4e91-8db1-e4c3ff1958fd"
      }
    }
  }
}
